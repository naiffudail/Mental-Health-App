<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#E97068"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <ScrollView
            android:id="@+id/content_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/greetingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/francois_one"
                    android:text="@string/h_Good_Morning"
                    android:textAllCaps="true"
                    android:textColor="#58315A"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/userNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/francois_one"
                    android:text="@string/user_name"
                    android:textAllCaps="false"
                    android:textColor="#58315A"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/feelingPromptTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/francois_one"
                    android:text="@string/h_text"
                    android:textAllCaps="true"
                    android:textColor="#58315A"
                    android:textSize="15sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/happyImageView"
                                android:layout_width="77dp"
                                android:layout_height="72dp"
                                android:contentDescription="@string/h_happy"
                                app:srcCompat="@drawable/happy" />

                            <TextView
                                android:id="@+id/happyTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/francois_one"
                                android:text="@string/h_happy"
                                android:textAllCaps="false"
                                android:textColor="#ECBB5F"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/calmImageView"
                                android:layout_width="81dp"
                                android:layout_height="72dp"
                                android:contentDescription="@string/h_clam"
                                app:srcCompat="@drawable/calm" />

                            <TextView
                                android:id="@+id/calmTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/francois_one"
                                android:text="@string/h_clam"
                                android:textColor="#117B93"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/angryImageView"
                                android:layout_width="76dp"
                                android:layout_height="74dp"
                                android:contentDescription="@string/h_angry"
                                app:srcCompat="@drawable/angry" />

                            <TextView
                                android:id="@+id/angryTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/francois_one"
                                android:text="@string/h_angry"
                                android:textColor="#B62B27"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/sadImageView"
                                android:layout_width="76dp"
                                android:layout_height="74dp"
                                android:contentDescription="@string/h_sad"
                                app:srcCompat="@drawable/sad" />

                            <TextView
                                android:id="@+id/sadTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/francois_one"
                                android:text="Sad"
                                android:textColor="#58315A"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/anxiousImageView"
                                android:layout_width="76dp"
                                android:layout_height="74dp"
                                android:contentDescription="@string/h_anxious"
                                app:srcCompat="@drawable/anxious" />

                            <TextView
                                android:id="@+id/anxiousTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/francois_one"
                                android:text="Anxious"
                                android:textColor="#ECBB5F"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/stressedImageView"
                                android:layout_width="76dp"
                                android:layout_height="74dp"
                                android:contentDescription="@string/h_stressed"
                                app:srcCompat="@drawable/stressed" />

                            <TextView
                                android:id="@+id/stressedTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/francois_one"
                                android:text="Stressed"
                                android:textColor="#B62B27"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/tiredImageView"
                                android:layout_width="76dp"
                                android:layout_height="74dp"
                                android:contentDescription="@string/h_tired"
                                app:srcCompat="@drawable/tired" />

                            <TextView
                                android:id="@+id/tiredTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/francois_one"
                                android:text="Tired"
                                android:textColor="#58315A"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/neutralImageView"
                                android:layout_width="76dp"
                                android:layout_height="74dp"
                                android:contentDescription="@string/h_neutral"
                                app:srcCompat="@drawable/neutral" />

                            <TextView
                                android:id="@+id/neutralTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/francois_one"
                                android:text="Neutral"
                                android:textColor="#117B93"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/sessionsTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/francois_one"
                    android:text="@string/h_explore"
                    android:textAllCaps="true"
                    android:textColor="#58315A"
                    android:textSize="20sp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:columnCount="2"
                    android:rowCount="2">

                    <!-- Music -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardMusic"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#B388FF"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/music"
                            app:tint="@android:color/white" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Quotes -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardQuotes"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#80DEEA"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/quote"
                            app:tint="@android:color/white" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Drawing -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardDrawing"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#EF9A9A"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/draw"
                            app:tint="@android:color/white" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Game -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardTicTacToe"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#C5CAE9"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/game"
                            app:tint="@android:color/white" />
                    </com.google.android.material.card.MaterialCardView>

                </GridLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>