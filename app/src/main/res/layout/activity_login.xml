<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/mindcare2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/francois_one"
        android:text="Welcome Back"
        android:textColor="#58315A"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <LinearLayout
        android:id="@+id/buttonGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintBottom_toTopOf="@+id/design"
        app:layout_constraintTop_toBottomOf="@id/welcomeTitle">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/admin_card"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#ECBB5F"
            app:cardCornerRadius="36dp"
            app:cardElevation="4dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/admin_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/francois_one"
                android:text="Admin Portal"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                app:icon="@android:drawable/ic_lock_lock"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="#FFFFFF" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/user_card"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            app:cardBackgroundColor="#F16C68"
            app:cardCornerRadius="36dp"
            app:cardElevation="4dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/user_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/francois_one"
                android:text="User Login"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="#FFFFFF" />

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <ImageView
        android:id="@+id/design"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:rotation="-5"
        android:src="@drawable/cartoon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>