<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="#FFFFFF"
    tools:context=".ContactsActivity">

    <!-- Custom Toolbar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbarContacts"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/home"
            app:tint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacts"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnSearchFriend"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_search"
            app:tint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarContacts">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Top Profile Item (Example) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="2dp"
                    android:src="@drawable/user"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    app:strokeColor="#FFC107"
                    app:strokeWidth="2dp" />

                <TextView
                    android:id="@+id/tvCurrentUserName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="Malek Muzahidhusaln"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_media_play"
                    app:tint="#828282" />
            </LinearLayout>

            <!-- My Groups -->
            <LinearLayout
                android:id="@+id/btnMyGroups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#00FF00"
                    android:padding="12dp"
                    android:src="@drawable/user"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    app:tint="#000000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="My Groups"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_media_play"
                    app:tint="#828282" />
            </LinearLayout>

            <!-- Add New Friends -->
            <LinearLayout
                android:id="@+id/btnAddFriend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#3D86FB"
                    android:padding="12dp"
                    android:src="@android:drawable/ic_menu_add"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    app:tint="#000000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="Add New Friends"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_media_play"
                    app:tint="#828282" />
            </LinearLayout>

            <!-- Contacts List Group A -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="A"
                android:textColor="#828282"
                android:textSize="12sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_contact" />

        </LinearLayout>
    </ScrollView>

    <!-- Side Alphabet Sidebar -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingHorizontal="4dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/AlphabetText"
            android:text="A" />
        <TextView
            style="@style/AlphabetText"
            android:text="B" />
        <TextView
            style="@style/AlphabetText"
            android:text="C" />
        <TextView
            style="@style/AlphabetText"
            android:text="D" />
        <TextView
            style="@style/AlphabetText"
            android:text="E" />
        <TextView
            style="@style/AlphabetText"
            android:text="F" />
        <TextView
            style="@style/AlphabetText"
            android:text="G" />
        <TextView
            style="@style/AlphabetText"
            android:text="H" />
        <TextView
            style="@style/AlphabetText"
            android:text="I" />
        <TextView
            style="@style/AlphabetText"
            android:text="J" />
        <TextView
            style="@style/AlphabetText"
            android:text="K" />
        <TextView
            style="@style/AlphabetText"
            android:text="L" />
        <TextView
            style="@style/AlphabetText"
            android:text="M" />
        <TextView
            style="@style/AlphabetText"
            android:text="N" />
        <TextView
            style="@style/AlphabetText"
            android:text="O" />
        <TextView
            style="@style/AlphabetText"
            android:text="P" />
        <TextView
            style="@style/AlphabetText"
            android:text="Q" />
        <TextView
            style="@style/AlphabetText"
            android:text="R" />
        <TextView
            style="@style/AlphabetText"
            android:text="S" />
        <TextView
            style="@style/AlphabetText"
            android:text="T" />
        <TextView
            style="@style/AlphabetText"
            android:text="U" />
        <TextView
            style="@style/AlphabetText"
            android:text="V" />
        <TextView
            style="@style/AlphabetText"
            android:text="W" />
        <TextView
            style="@style/AlphabetText"
            android:text="X" />
        <TextView
            style="@style/AlphabetText"
            android:text="Y" />
        <TextView
            style="@style/AlphabetText"
            android:text="Z" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
