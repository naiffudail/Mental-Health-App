<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Good Morning!"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How Are You Feeling Today"
                android:textColor="@color/h_tex"
                android:textStyle="bold"
                android:layout_marginTop="32dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="32dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/happyImageView"
                        android:layout_width="77dp"
                        android:layout_height="72dp"
                        android:layout_marginEnd="43dp"
                        android:layout_marginBottom="11dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/smile"
                        app:srcCompat="@drawable/smile" />

                    <TextView
                        android:id="@+id/happyTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/h_happy"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="32dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/calmImageView"
                        android:layout_width="77dp"
                        android:layout_height="72dp"
                        android:layout_marginEnd="43dp"
                        android:layout_marginBottom="11dp"
                        android:src="@drawable/relieved"
                        app:srcCompat="@drawable/relieved" />

                    <TextView
                        android:id="@+id/calmTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Calm"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/angryImageView"
                        android:layout_width="77dp"
                        android:layout_height="72dp"
                        android:layout_marginEnd="43dp"
                        android:layout_marginBottom="11dp"
                        android:src="@drawable/angry"
                        app:srcCompat="@drawable/angry" />

                    <TextView
                        android:id="@+id/angryTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Angry"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sessions"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sessionLayout1"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/type_bg">

                <TextView
                    android:id="@+id/sessionDescription1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="In This Meeting Discuss About Mental Health."
                    android.textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/rescheduleButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reschedule"
                    android:backgroundTint="@color/h_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/sessionDescription1"
                    app:layout_constraintStart_toStartOf="@+id/sessionDescription1"
                    app:layout_constraintTop_toBottomOf="@+id/sessionDescription1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sessionLayout2"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/type_bg">

                <TextView
                    android:id="@+id/sessionDescription2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="In This Meeting Discuss About Mental Health."
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/rescheduleButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reschedule"
                    android:backgroundTint="@color/h_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/sessionDescription2"
                    app:layout_constraintStart_toStartOf="@+id/sessionDescription2"
                    app:layout_constraintTop_toBottomOf="@+id/sessionDescription2" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
